@model NewLinkShortApp.Models.Certificate
@{
    ViewBag.Title = "NewCertificate";
    Layout = "~/Views/Shared/UrlLayout.cshtml";
}

<div class="w3pvt-logo align-self">
    <h2>Indata Link İle Bağlantılarınız<br /> İçin Sertifika Oluşturun</h2>
    <img src="~/Photo/photo.png" style="width:250px;margin-left:200px;" />
    <hr />
    <table>
        <div class="row">
            <div class="col-md-9">
                <form action="#" method="post">
                    @*<div style="color:white;margin-bottom:10px;">

        </div>*@
                    <label style="color:white">Sertifika Adı</label>
                    @Html.TextBoxFor(x => x.CertificateName, new { placeholder = "Sertifika Adı...", @class = "form-control" })
                    <br />
                    <label style="color:white">Adınız</label>
                    @Html.TextBoxFor(x => x.Name, new { placeholder = "Adınız...", @class = "form-control" })
                    <br />
                    <label style="color:white">Soyadınız</label>
                    @Html.TextBoxFor(x => x.Surname, new { placeholder = "Soyadınız...", @class = "form-control" })
                    <br />
                    <label style="color:white">Tarih</label>
                    @Html.TextBoxFor(x => x.Tarih, new { placeholder = "Tarih...", @class = "form-control" })

                    <hr />
                    <button type="submit" id="btnId" class="form-control" style="background-color:rebeccapurple;color:white">Sertifika Kaydet</button>
                </form>
            </div>
            <!--<div class="col-md-3">
                <img src="~/Photo/s2.jpg" style="width:300px;height:400px;" id="Id1" />-->
