@using NewLinkShortApp.Models
@model List<Template>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/UrlLayout.cshtml";
}

<table>
    <div class="container">
        <div class="row">
            <div class="card-group">
                @foreach(var x in Model) { 
                <div class="card">
                    <img class="card-img-top" src="@x.FilePath" alt="Card image cap" style="width: 200px; margin-left: 100px;">
                    <div class="card-body">
                        <h5 class="card-title">@x.Name</h5>
                        <p class="card-text" style="color:black">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted"><a href="/Certificate2/NewCertificate/@x.Id" class="btn btn-warning">Şablonu Seç</a></small>
                    </div>
                </div>
                }
                
            </div>
        </div>
    </div>

</table>

