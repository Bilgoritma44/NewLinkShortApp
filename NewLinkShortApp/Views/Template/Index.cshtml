@using NewLinkShortApp.Models
@model List<Template>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/UrlLayout.cshtml";
}
<style>
    .card-img-top {
        
        background-color: white;
        transition: transform .2s; /* Animation */
        width: 200px;
        height: 200px;
        margin: 0 auto;
    }

        .card-img-top:hover {
            transform: scale(1.4); /* (150% zoom - Note: if the zoom is too large, it will go outside of the viewport) */
        }
</style>
<table>
    <div class="container">
        <div class="row">
            <div class="card-group">
                @foreach(var x in Model) { 
                <div col-md-4>
                    <div class="card" style="margin:10px;">
                        <img class="card-img-top" src="~/Templates/deneme.svg" alt="Card image cap" style="width: 350px; height:200px; margin-left: 10px;">
                        <div class="card-body">
                            <h5 class="card-title">@x.Name</h5>

                            <p class="card-text" style="color:black">@x.Name Şablonu<br />@x.FieldCount Alandan Oluşmaktadır.</p>

                        </div>
                        <div class="card-footer">
                            <small class="text-muted"><a href="/Certificate2/NewCertificate/@x.Id" class="btn btn-warning">Şablonu Seç</a></small>
                        </div>
                    </div>
                </div>
                }
                
            </div>
        </div>
    </div>

</table>

